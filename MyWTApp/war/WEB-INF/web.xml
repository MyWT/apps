<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  
    <servlet>
		<servlet-name>ARB</servlet-name>
		<servlet-class>rnd.webapp.mwt.server.ARBImpl</servlet-class>
	</servlet>

	<servlet-mapping>
  		<servlet-name>ARB</servlet-name>
  		<url-pattern>/mywtapp/ARB</url-pattern>
	</servlet-mapping>
	
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>MyWTApp.html</welcome-file>
  </welcome-file-list>

</web-app>
